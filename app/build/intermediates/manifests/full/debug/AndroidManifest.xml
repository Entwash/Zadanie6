<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.droidsonroids.materialmusicfacts"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="24" />

    <application
        android:name="com.droidsonroids.materialmusicfacts.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.droidsonroids.materialmusicfacts.screens.screen_main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainActivityTheme" />
        <activity
            android:name="com.droidsonroids.materialmusicfacts.screens.screen_splash.SplashActivity"
            android:theme="@style/SplashActivityTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.droidsonroids.materialmusicfacts.screens.AlbumDetailsActivity.AlbumDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AlbumActivityTheme" />
    </application>

</manifest>